<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.cashcuk.MainTitleBar
        android:id="@+id/main_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.cashcuk.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 기본정보 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/top"
                android:gravity="center"
                android:paddingBottom="@dimen/item_margin_left"
                android:paddingTop="@dimen/item_margin_left"
                android:text="@string/str_personal_info"
                android:textColor="@color/color_my_point"
                android:textSize="@dimen/authentication_txt_size"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shadow" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/agreement_margin"
                android:layout_marginRight="@dimen/agreement_margin"
                android:layout_marginTop="@dimen/item_margin_left"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/number"
                        android:gravity="center"
                        android:paddingBottom="@dimen/item_margin_left"
                        android:paddingTop="@dimen/item_margin_left"
                        android:text="@string/str_find_email_name"
                        android:textColor="@color/color_main_friend_txt"
                        android:textSize="@dimen/login_find_txt_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:background="@drawable/number2"
                        android:hint="@string/str_find_email_name"
                        android:padding="@dimen/item_margin_left"
                        android:singleLine="true"
                        android:textColor="@color/color_input_point_request"
                        android:textColorHint="@color/color_hint_txt"
                        android:textSize="@dimen/login_find_txt_size" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/item_padding"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/number"
                        android:gravity="center"
                        android:paddingBottom="@dimen/item_margin_left"
                        android:paddingTop="@dimen/item_margin_left"
                        android:text="@string/str_email_en"
                        android:textColor="@color/color_main_friend_txt"
                        android:textSize="@dimen/login_find_txt_size"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_email_id"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:background="@drawable/number2"
                        android:inputType="textEmailAddress"
                        android:padding="@dimen/item_margin_left"
                        android:singleLine="true"
                        android:textColor="@color/color_input_point_request"
                        android:textColorHint="@color/color_hint_txt"
                        android:textSize="@dimen/login_find_txt_size" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_overlap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/item_padding"
                    android:background="@drawable/btn_button_selector"
                    android:paddingBottom="@dimen/item_margin_left"
                    android:paddingTop="@dimen/item_margin_left"
                    android:text="@string/str_chk_overlap"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/input_info_txt_size" />

                <TextView
                    android:id="@+id/txt_id_overlap_chk_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/item_padding"
                    android:layout_marginTop="@dimen/item_padding"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/tab_title_txt_size"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/item_padding"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/number"
                        android:gravity="center"
                        android:paddingBottom="@dimen/item_margin_left"
                        android:paddingTop="@dimen/item_margin_left"
                        android:text="@string/str_pwd"
                        android:textColor="@color/color_main_friend_txt"
                        android:textSize="@dimen/login_find_txt_size"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_pwd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:background="@drawable/number2"
                        android:hint="@string/str_membership_pwd"
                        android:inputType="textPassword"
                        android:padding="@dimen/item_margin_left"
                        android:singleLine="true"
                        android:textColor="@color/color_input_point_request"
                        android:textColorHint="@color/color_hint_txt"
                        android:textSize="@dimen/login_find_txt_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/item_padding"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/number"
                        android:gravity="center"
                        android:text="@string/str_pwd_chk"
                        android:textColor="@color/color_main_friend_txt"
                        android:textSize="@dimen/login_find_txt_size"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_pwd_chk"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:background="@drawable/number2"
                        android:inputType="textPassword"
                        android:padding="@dimen/item_margin_left"
                        android:singleLine="true"
                        android:textColor="@color/color_input_point_request"
                        android:textColorHint="@color/color_hint_txt"
                        android:textSize="@dimen/login_find_txt_size" />
                </LinearLayout>

                <!-- 휴대폰 번호 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/item_padding"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/number"
                        android:gravity="center"
                        android:paddingBottom="@dimen/item_margin_left"
                        android:paddingTop="@dimen/item_margin_left"
                        android:text="@string/str_mobile_en"
                        android:textColor="@color/color_main_friend_txt"
                        android:textSize="@dimen/login_find_txt_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_phone_num"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:background="@drawable/number2"
                        android:padding="@dimen/item_margin_left"
                        android:singleLine="true"
                        android:text="010-0000-0000"
                        android:textColor="@color/color_input_point_request"
                        android:textSize="@dimen/login_find_txt_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/item_padding"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/number"
                        android:gravity="center"
                        android:paddingBottom="@dimen/item_margin_left"
                        android:paddingTop="@dimen/item_margin_left"
                        android:text="@string/str_sex"
                        android:textColor="@color/color_main_friend_txt"
                        android:textSize="@dimen/login_find_txt_size"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8">

                        <RadioGroup
                            android:id="@+id/rg_sex"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:checkedButton="@+id/rb_man"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/number2"
                                android:paddingBottom="@dimen/item_margin_left"
                                android:paddingLeft="@dimen/item_margin_left"
                                android:paddingTop="@dimen/item_margin_left">

                                <RadioButton
                                    android:id="@+id/rb_man"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:button="@drawable/rb_chk_selector"
                                    android:clickable="false"
                                    android:paddingLeft="@dimen/item_margin_left"
                                    android:text="@string/str_man"
                                    android:textColor="@color/color_dlg_msg"
                                    android:textSize="@dimen/login_find_txt_size" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/item_padding"
                                android:layout_weight="1"
                                android:background="@drawable/number3"
                                android:paddingBottom="@dimen/item_margin_left"
                                android:paddingLeft="@dimen/item_margin_left"
                                android:paddingTop="@dimen/item_margin_left">

                                <RadioButton
                                    android:id="@+id/rb_woman"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@null"
                                    android:button="@drawable/rb_chk_selector"
                                    android:clickable="false"
                                    android:paddingLeft="@dimen/item_margin_left"
                                    android:text="@string/str_woman"
                                    android:textColor="@color/color_dlg_msg"
                                    android:textSize="@dimen/login_find_txt_size" />
                            </LinearLayout>
                        </RadioGroup>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/item_padding"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/number"
                        android:gravity="center"
                        android:paddingBottom="@dimen/item_margin_left"
                        android:paddingTop="@dimen/item_margin_left"
                        android:text="@string/str_birth_date_title"
                        android:textColor="@color/color_main_friend_txt"
                        android:textSize="@dimen/login_find_txt_size"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_year"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/number2"
                                android:gravity="right"
                                android:padding="@dimen/item_margin_left"
                                android:singleLine="true"
                                android:text="1900"
                                android:textColor="@color/color_input_point_request"
                                android:textColorHint="@color/color_hint_txt"
                                android:textSize="@dimen/login_find_txt_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/item_padding"
                            android:layout_weight="2"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_month"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/number3"
                                android:gravity="right"
                                android:padding="@dimen/item_margin_left"
                                android:singleLine="true"
                                android:text="00"
                                android:textColor="@color/color_input_point_request"
                                android:textColorHint="@color/color_hint_txt"
                                android:textSize="@dimen/login_find_txt_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/item_padding"
                            android:layout_weight="2"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_day"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/number3"
                                android:gravity="right"
                                android:padding="@dimen/item_margin_left"
                                android:singleLine="true"
                                android:text="00"
                                android:textColor="@color/color_input_point_request"
                                android:textColorHint="@color/color_hint_txt"
                                android:textSize="@dimen/login_find_txt_size" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- 사는 곳 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_margin_left"
                android:background="@color/color_main_friend_txt"
                android:gravity="center"
                android:paddingBottom="@dimen/item_margin_left"
                android:paddingTop="@dimen/item_margin_left"
                android:text="@string/str_residence"
                android:textColor="@color/color_my_point"
                android:textSize="@dimen/authentication_txt_size"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shadow" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/agreement_margin"
                android:layout_marginRight="@dimen/agreement_margin"
                android:layout_marginTop="@dimen/item_padding"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/item_padding"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/number"
                        android:gravity="center"
                        android:paddingBottom="@dimen/item_margin_left"
                        android:paddingTop="@dimen/item_margin_left"
                        android:text="@string/str_cities"
                        android:textColor="@color/color_main_friend_txt"
                        android:textSize="@dimen/login_find_txt_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_cities"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:background="@drawable/number2"
                        android:ellipsize="end"
                        android:hint="@string/str_cities_hint"
                        android:padding="@dimen/item_margin_left"
                        android:singleLine="true"
                        android:textColor="@color/color_input_point_request"
                        android:textColorHint="@color/color_hint_txt"
                        android:textSize="@dimen/login_find_txt_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/item_padding"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/number"
                        android:gravity="center"
                        android:paddingBottom="@dimen/item_margin_left"
                        android:paddingTop="@dimen/item_margin_left"
                        android:text="@string/str_town"
                        android:textColor="@color/color_main_friend_txt"
                        android:textSize="@dimen/login_find_txt_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_town"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:background="@drawable/number2"
                        android:ellipsize="end"
                        android:hint="@string/str_town_hint"
                        android:inputType="textEmailAddress"
                        android:padding="@dimen/item_margin_left"
                        android:singleLine="true"
                        android:textColor="@color/color_input_point_request"
                        android:textColorHint="@color/color_hint_txt"
                        android:textSize="@dimen/login_find_txt_size" />
                </LinearLayout>
            </LinearLayout>

            <!-- 광고 발송 기본정보 -->
            <TextView
                android:id="@+id/txt_send_info_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_margin_left"
                android:background="@drawable/top"
                android:gravity="center"
                android:paddingBottom="@dimen/item_margin_left"
                android:paddingTop="@dimen/item_margin_left"
                android:text="@string/str_ad_send_default_info"
                android:textColor="@color/color_my_point"
                android:textSize="@dimen/authentication_txt_size"
                android:textStyle="bold"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shadow" />

            <LinearLayout
                android:id="@+id/ll_ad_send_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/item_margin_left"
                android:layout_marginRight="@dimen/item_margin_left"
                android:layout_marginTop="@dimen/item_padding"
                android:orientation="vertical" />

            <!-- 추천인 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_margin_left"
                android:background="@drawable/top"
                android:gravity="center"
                android:paddingBottom="@dimen/item_margin_left"
                android:paddingTop="@dimen/item_margin_left"
                android:text="@string/str_recommender"
                android:textColor="@color/color_my_point"
                android:textSize="@dimen/authentication_txt_size"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shadow" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/agreement_margin"
                android:layout_marginRight="@dimen/agreement_margin"
                android:layout_marginTop="@dimen/item_margin_left"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@drawable/number"
                    android:gravity="center"
                    android:text="@string/str_recommender_title"
                    android:textColor="@color/color_main_friend_txt"
                    android:textSize="@dimen/login_find_txt_size"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_recommender"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:background="@drawable/number2"
                    android:hint="@string/str_input_recommender_hint"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/item_margin_left"
                    android:singleLine="true"
                    android:textColor="@color/color_input_point_request"
                    android:textColorHint="@color/color_hint_txt"
                    android:textSize="@dimen/login_find_txt_size" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_membership"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/item_margin_left"
                android:background="@drawable/btn_membership_selector"
                android:paddingBottom="@dimen/item_margin_left"
                android:paddingTop="@dimen/item_margin_left"
                android:text="@string/str_join"
                android:textColor="@color/color_white"
                android:textSize="@dimen/input_info_txt_size" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>