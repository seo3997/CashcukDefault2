<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ad_list_item_selector"
        android:paddingBottom="@dimen/item_margin_left"
        android:layout_marginTop="@dimen/item_margin_left"
        android:paddingLeft="@dimen/item_margin_left"
        android:paddingRight="@dimen/item_margin_left"
        android:paddingTop="@dimen/item_margin_left">

        <LinearLayout
            android:id="@+id/ll_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_ad_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="title"
                android:textColor="@color/color_main_friend_txt"
                android:textSize="@dimen/terms_company_introduction_txt_size"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/agreement_margin"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_push_send_cnt"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/terms_company_introduction_txt_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/divider_height"
                    android:text=":"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/terms_company_introduction_txt_size" />

                <TextView
                    android:id="@+id/txt_send_cnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/item_padding"
                    android:text="25"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/terms_company_introduction_txt_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/login_divider_height"
                    android:text="@string/str_gun"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/terms_company_introduction_txt_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_padding"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_push_send_total_cost"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/terms_company_introduction_txt_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/divider_height"
                    android:text=":"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/terms_company_introduction_txt_size" />

                <TextView
                    android:id="@+id/txt_send_push_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/item_padding"
                    android:text="25"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/terms_company_introduction_txt_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/login_divider_height"
                    android:text="@string/str_won"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/terms_company_introduction_txt_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_padding"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_push_send_date"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/terms_company_introduction_txt_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/divider_height"
                    android:text=":"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/terms_company_introduction_txt_size" />

                <TextView
                    android:id="@+id/txt_send_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/item_padding"
                    android:text="25"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/terms_company_introduction_txt_size" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/txt_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ll_txt"
            android:layout_alignParentRight="true"
            android:text="승인거부" />
    </RelativeLayout>
</LinearLayout>