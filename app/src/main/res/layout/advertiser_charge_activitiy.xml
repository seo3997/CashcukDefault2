                                android:singleLine="true"
                                android:textColor="@color/color_input_point_request"
                                android:textSize="@dimen/login_find_txt_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_receipt_phone_num"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/et_receipt_first_num"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/number2"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="3"
                                android:padding="@dimen/item_margin_left"
                                android:singleLine="true"
                                android:textColor="@color/color_input_point_request"
                                android:textSize="@dimen/login_find_txt_size" />

                            <EditText
                                android:id="@+id/et_receipt_middle_num"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/item_padding"
                                android:layout_weight="1"
                                android:background="@drawable/number3"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="4"
                                android:padding="@dimen/item_margin_left"
                                android:singleLine="true"
                                android:textColor="@color/color_input_point_request"
                                android:textSize="@dimen/login_find_txt_size" />

                            <EditText
                                android:id="@+id/et_receipt_last_num"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/item_padding"
                                android:layout_weight="1"
                                android:background="@drawable/number3"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="4"
                                android:padding="@dimen/item_margin_left"
                                android:singleLine="true"
                                android:textColor="@color/color_input_point_request"
                                android:textSize="@dimen/login_find_txt_size" />
                        </LinearLayout>
                    </LinearLayout>

                    <RadioButton
                        android:id="@+id/rb_businessman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/item_margin_left"
                        android:background="@null"
                        android:button="@drawable/rb_chk_selector"
                        android:paddingLeft="@dimen/item_padding"
                        android:text="@string/str_businessman" />

                    <!-- 사업자번호 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/item_margin_left"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:background="@drawable/number"
                            android:gravity="center"
                            android:paddingBottom="@dimen/item_margin_left"
                            android:paddingTop="@dimen/item_margin_left"
                            android:text="@string/str_businessman_registered_num"
