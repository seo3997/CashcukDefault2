<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_margin_left"
        android:background="@drawable/bg1"
        android:orientation="vertical"
        android:paddingBottom="@dimen/item_padding"
        android:paddingLeft="@dimen/agreement_margin"
        android:paddingRight="@dimen/agreement_margin"
        android:paddingTop="@dimen/item_margin_left">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_use_nm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="@color/color_main_friend_txt"
                android:textSize="@dimen/login_find_txt_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_input_nm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/color_white"
                android:textSize="@dimen/tab_title_txt_size"
                android:textStyle="bold"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/ll_request_account_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txt_bank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/tab_title_txt_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="_"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/tab_title_txt_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/tab_title_txt_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_request_nm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/login_divider_height"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/tab_title_txt_size"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_padding"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_use_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sub_title_txt_size"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/item_padding"
                android:text="@string/str_won"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sub_title_txt_size"
                android:textStyle="bold" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_padding">

            <TextView
                android:id="@+id/txt_use_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="@color/color_white"
                android:textSize="@dimen/tab_title_txt_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_request_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_sch"
                android:paddingBottom="@dimen/item_padding"
                android:paddingLeft="@dimen/item_margin_left"
                android:paddingRight="@dimen/item_margin_left"
                android:paddingTop="@dimen/item_padding"
                android:textSize="@dimen/tab_title_txt_size"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>