<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_point_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_sch"
    android:orientation="vertical"
    android:paddingLeft="@dimen/item_margin_left"
    android:paddingRight="@dimen/item_margin_left"
    android:paddingTop="@dimen/item_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_nm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textColor="@color/color_point_list_nm_txt"
            android:textSize="@dimen/tab_title_txt_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/color_white"
            android:textSize="@dimen/authentication_txt_size"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/item_padding">

        <LinearLayout
            android:id="@+id/ll_request_account_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/txt_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_white"
                android:textSize="@dimen/tab_title_txt_size"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/login_divider_height"
                android:text="("
                android:textColor="@color/color_white"
                android:textSize="@dimen/tab_title_txt_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_request_nm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/login_divider_height"
                android:textColor="@color/color_white"
                android:textSize="@dimen/tab_title_txt_size"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/login_divider_height"
                android:text=")"
                android:textColor="@color/color_white"
                android:textSize="@dimen/tab_title_txt_size"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/txt_point_en"
            android:textColor="@color/color_white"
            android:textSize="@dimen/input_info_txt_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_point_en"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/item_padding"
            android:text="@string/str_point_en"
            android:textColor="@color/color_white"
            android:textSize="@dimen/tab_title_txt_size" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_point_list_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@drawable/bar2"
        android:orientation="horizontal" />
</LinearLayout>